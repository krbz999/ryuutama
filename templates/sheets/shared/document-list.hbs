<section class="document-listing">
  {{#if label}}
  <h4>{{label}}</h4>
  {{/if}}

  <section class="document-list">
    {{#each entries as |entry|}}
    <div class="entry {{entry.classes}}" data-uuid="{{entry.document.uuid}}" data-name="{{entry.document.name}}" data-document-name="{{entry.document.documentName}}" data-tooltip-html="{{ryuutama-tooltip uuid=entry.document.uuid}}" {{#each dataset as |v k|}} data-{{k}}="{{v}}" {{/each}}>
      <img src="{{entry.document.img}}" alt="{{entry.document.name}}">

      <div class="center">
        {{#if ../useItem}}
        <a class="title" data-action="useItem">{{entry.document.name}}</a>
        {{else}}
        <span class="title">{{entry.document.name}}</span>
        {{/if}}
        <span class="attribute">
          {{#if entry.embedded}}
          <span class="values">
            <input type="text" id="{{@root.rootId}}-{{entry.document.id}}-{{entry.embedded.name}}" class="delta" data-name="{{entry.embedded.name}}" value="{{entry.embedded.value}}">
            <span class="sep">/</span>
            <span class="max">{{entry.embedded.max}}</span>
          </span>
          {{/if}}
        </span>
      </div>
    </div>
    {{/each}}
  </section>
</section>
