<section class="header {{#if disabled}} play {{else}} standard-form {{/if}}">
  {{#if disabled}}
  <aside class="avatar">
    <img src="{{document.img}}" alt="{{document.name}}">
  </aside>
  <h3 class="title">
    <span>{{document.name}}</span>
    <div class="tags">
      {{#if levelUp}}
      <a data-action="advance" class="tag {{#if levelUp.glow}} glow {{/if}}" data-tooltip-text="{{levelUp.tooltip}}" {{disabled (not editable)}}>{{levelUp.tag}}</a>
      {{/if}}
      {{#each tags}}
      <div class="tag {{cssClass}}" data-tooltip-text="{{{tooltip}}}">{{{tag}}}</div>
      {{/each}}
    </div>

    {{!-- TRAVELER: XP BAR --}}
    {{#if (eq document.type "traveler")}}
    {{#with document.system.details.exp}}
    <progress-bar data-name="system.details.exp.value" class="exp" id="{{@root.rootId}}-exp" data-value="{{value}}" data-pct="{{pct}}" data-label="{{value}} / {{max}}" data-input></progress-bar>
    {{/with}}
    {{/if}}
  </h3>
  {{> "templates/generic/tab-navigation.hbs"}}
  {{else}}
  {{formGroup fields.name value=source.name}}
  {{formGroup fields.img value=source.img}}

  {{> "templates/generic/tab-navigation.hbs"}}
  {{/if}}
</section>
