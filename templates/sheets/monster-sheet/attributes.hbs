<section data-tab="{{tabs.attributes.id}}" class="{{tabs.attributes.cssClass}}" data-group="{{tabs.attributes.group}}">

  {{!-- ABILITIES --}}
  <div class="icon-fields">
    {{#each abilities}}
    <div class="icon-field">
      {{#if @root.isEditable}}
      <button type="button" data-action="configure" data-config="ability" data-ability="{{ability}}" class="unsize icon fa-solid fa-cog"></button>
      {{else}}
      <ryuutama-icon src="{{icon}}"></ryuutama-icon>
      {{/if}}
      <div class="form-group stacked">
        <label>{{label}}</label>
        <div class="form-fields">
          <span class="value">{{value.die}}</span>
        </div>
      </div>
    </div>
    {{/each}}
  </div>

  {{!-- HP & MP --}}
  {{> "actor-resources"}}

  {{!-- ATTACKS & CHECK --}}
  <div class="icon-fields">
    <div class="icon-field">
      {{#if isEditable}}
      <button type="button" data-action="configure" data-config="attack" class="unsize icon fa-solid fa-cog"></button>
      {{else}}
      <img src="{{attackImage}}" alt="">
      {{/if}}
      <div class="attack">
        <button type="button" data-action="rollAttack" {{disabled (not isInteractive)}}>
          <span>{{localize "RYUUTAMA.ACTOR.rollAttack"}}</span>
        </button>
      </div>
    </div>

    <button type="button" class="heightened" data-action="rollCheck" data-check="check" {{disabled (not isInteractive)}}>
      <i class="fa-solid fa-burst"></i>
      <span>{{localize "RYUUTAMA.ACTOR.rollCheck"}}</span>
    </button>
  </div>

  {{!-- STATUSES --}}
  <div class="icon-fields column-3">
    {{#each statuses}}
    <div class="icon-field">
      <a data-action="toggleStatus" data-status="{{status}}" {{disabled (not @root.editable)}}>
        <ryuutama-icon src="{{img}}" {{#if active}} class="active" {{/if}}></ryuutama-icon>
      </a>
      <div class="form-group stacked">
        <label>{{name}}</label>
        <div class="form-fields">
          <span class="value italics">{{label}}</span>
        </div>
      </div>
    </div>
    {{/each}}
  </div>

  <div class="icon-fields">
    {{!-- CONDITION --}}
    <div class="icon-field">
      {{#if isEditable}}
      <button type="button" data-action="configure" data-config="condition" class="unsize icon fa-solid fa-cog"></button>
      {{else}}
      <ryuutama-icon src="systems/ryuutama/assets/official/icons/check/condition.svg"></ryuutama-icon>
      {{/if}}
      <div class="form-group stacked">
        <label>{{localize "RYUUTAMA.ACTOR.condition"}}</label>
        <div class="form-fields">
          <span class="value italics">{{document.system.condition.value}}</span>
        </div>
      </div>
    </div>

    {{!-- ARMOR --}}
    <div class="icon-field">
      {{#if isEditable}}
      <button type="button" data-action="configure" data-config="defense" class="icon fa-solid fa-cog"></button>
      {{else}}
      <ryuutama src=""></ryuutama>
      {{/if}}
      <div class="form-group stacked">
        <label>{{localize "RYUUTAMA.ACTOR.MONSTER.armor"}}</label>
        <div class="form-fields">
          <span class="value italics">{{document.system.defense.total}}</span>
          {{#if armor.hasTags}}
          <div class="tags">
            {{#if armor.tags.physical}}
            <span class="tag">{{localize "RYUUTAMA.ACTOR.MONSTER.physical"}}: {{armor.tags.physical}}</span>
            {{/if}}
            {{#if armor.tags.magical}}
            <span class="tag">{{localize "RYUUTAMA.ACTOR.MONSTER.magical"}}: {{armor.tags.magical}}</span>
            {{/if}}
          </div>
          {{/if}}
        </div>
      </div>
    </div>

    <div class="icon-field">
      <ryuutama src=""></ryuutama>
      <div class="form-group stacked">
        <label>{{localize "RYUUTAMA.ACTOR.defenseValue"}}</label>
        <div class="form-fields">
          <span class="value italics">{{ifThen document.system.defenseValue document.system.defenseValue "-"}}</span>
        </div>
      </div>
    </div>

  </div>

  {{!-- SPECIAL ABILITY --}}
  {{#if specialAbility.item}}
  <section>
    <p>
      <strong>{{localize "RYUUTAMA.MONSTER.specialAbility"}}: {{specialAbility.item.name}}</strong>
    </p>
    {{{specialAbility.description}}}
  </section>
  {{/if}}

</section>
